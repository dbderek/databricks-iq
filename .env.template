# Databricks LakeSpend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Databricks Connection Settings
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-personal-access-token

# SQL Warehouse Configuration (for UI)
SQL_WAREHOUSE=your-sql-warehouse-id

# Optional: Databricks LakeSpend Assistant Endpoint (for chatbot)
DATABRICKS_LAKESPEND_ENDPOINT=databricks-lakespend-assistant

# Optional: Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Optional: Custom Catalog/Schema (defaults: catalog=databrickslakespend, schema=main)
# DATABRICKS_CATALOG=databrickslakespend
# DATABRICKS_SCHEMA=main